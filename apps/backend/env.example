# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
# Option 1: Use connection string
DATABASE_URL=postgresql://root:root@localhost:5432/awoofDB

# Option 2: Use individual config (DATABASE_URL takes precedence)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=awoofDB
DB_USER=root
DB_PASSWORD=root

# Redis Configuration
# Option 1: Use connection string
REDIS_URL=redis://localhost:6379

# Option 2: Use individual config (REDIS_URL takes precedence)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long-change-this-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Configuration (Choose one provider)
# SendGrid
SENDGRID_API_KEY=

# AWS SES (Alternative)
AWS_SES_ACCESS_KEY=
AWS_SES_SECRET_KEY=
AWS_SES_REGION=us-east-1

# AWS S3 (File Storage)
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# WhatsApp OTP
WHATSAPP_API_KEY=
WHATSAPP_API_URL=

# Paystack
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=

# Monitoring
SENTRY_DSN=

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

