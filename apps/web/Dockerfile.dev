# syntax=docker.io/docker/dockerfile:1

FROM node:18-alpine

RUN apk add --no-cache libc6-compat

WORKDIR /app

# Install dependencies based on the preferred package manager (used at build time; at runtime volume may overwrite)
COPY package.json yarn.lock* package-lock.json* pnpm-lock.yaml* .npmrc* ./
RUN \
  if [ -f yarn.lock ]; then yarn --frozen-lockfile; \
  elif [ -f package-lock.json ]; then npm ci; \
  elif [ -f pnpm-lock.yaml ]; then corepack enable pnpm && pnpm i --frozen-lockfile; \
  else echo "Lockfile not found." && exit 1; \
  fi

# Copy source code and entrypoint
COPY . .
COPY docker-entrypoint.dev.sh /docker-entrypoint.dev.sh
RUN chmod +x /docker-entrypoint.dev.sh

# Install deps again so image has full node_modules (runtime volume may replace /app and leave node_modules empty)
RUN \
  if [ -f yarn.lock ]; then yarn --frozen-lockfile; \
  elif [ -f package-lock.json ]; then npm ci; \
  elif [ -f pnpm-lock.yaml ]; then corepack enable pnpm && pnpm i --frozen-lockfile; \
  else echo "Lockfile not found." && exit 1; \
  fi

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs
RUN chown -R nextjs:nodejs /app

ENV NODE_ENV=development
ENV WATCHPACK_POLLING=true
ENV CHOKIDAR_USEPOLLING=true
EXPOSE 3000
ENV PORT=3000

# Entrypoint installs deps into /app/node_modules when the compose volume leaves it empty, then runs CMD as nextjs
ENTRYPOINT ["/docker-entrypoint.dev.sh"]
CMD ["npm", "run", "dev"]